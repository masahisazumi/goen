// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// ============================================
// Auth.js Required Models
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // Hashed password for credentials login
  accounts      Account[]
  sessions      Session[]

  // Service-specific fields
  userType      String?   // JSON array: ["vendor"], ["owner"], or ["vendor", "owner"]
  isAdmin       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  profile       Profile?
  stores        Store[]
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
  favorites     Favorite[]
  reviewsGiven  Review[]  @relation("ReviewsGiven")
  reviewsReceived Review[] @relation("ReviewsReceived")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Service-specific Models
// ============================================

model Profile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  displayName String
  description String?
  category    String?
  area        String?
  tags        String?  // JSON array stored as string
  website     String?
  instagram   String?
  twitter     String?
  isVerified  Boolean  @default(false)

  images      ProfileImage[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProfileImage {
  id        String  @id @default(cuid())
  profileId String
  profile   Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  url       String
  order     Int     @default(0)
}

model Store {
  id          String   @id @default(cuid())
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  name        String
  description String?
  category    String?
  area        String?   // 主な出店エリア
  tags        String?   // JSON array stored as string

  // ビジネス情報
  website     String?
  instagram   String?
  twitter     String?

  images      StoreImage[]

  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StoreImage {
  id      String @id @default(cuid())
  storeId String
  store   Store  @relation(fields: [storeId], references: [id], onDelete: Cascade)
  url     String
  order   Int    @default(0)
}

model Space {
  id          String   @id @default(cuid())
  ownerId     String

  name        String
  description String?
  location    String
  address     String?
  capacity    String?
  price       String?
  tags        String?  // JSON array stored as string

  facilities  String?  // JSON array stored as string
  openingHours String?
  closedDays  String?

  images      SpaceImage[]
  favorites   Favorite[]
  reviews     Review[]

  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SpaceImage {
  id      String @id @default(cuid())
  spaceId String
  space   Space  @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  url     String
  order   Int    @default(0)
}

model Message {
  id         String   @id @default(cuid())
  senderId   String
  receiverId String
  content    String
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())

  sender   User @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
}

model Favorite {
  id        String   @id @default(cuid())
  userId    String
  spaceId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  space Space @relation(fields: [spaceId], references: [id], onDelete: Cascade)

  @@unique([userId, spaceId])
}

model Review {
  id         String   @id @default(cuid())
  rating     Int
  content    String?

  authorId   String
  targetId   String   // User who receives the review
  spaceId    String?  // Optional: related space

  author     User     @relation("ReviewsGiven", fields: [authorId], references: [id], onDelete: Cascade)
  target     User     @relation("ReviewsReceived", fields: [targetId], references: [id], onDelete: Cascade)
  space      Space?   @relation(fields: [spaceId], references: [id], onDelete: SetNull)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Booking {
  id          String   @id @default(cuid())
  vendorId    String
  spaceId     String

  date        DateTime
  status      String   @default("pending") // pending, confirmed, cancelled, completed
  message     String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model VerificationRequest {
  id          String   @id @default(cuid())
  userId      String   @unique

  documentType String  // "business_license", "id_card", etc.
  documentUrl  String?
  status       String  @default("pending") // pending, approved, rejected
  note         String? // Admin notes or rejection reason

  submittedAt DateTime @default(now())
  reviewedAt  DateTime?
  reviewedBy  String?
}

// ============================================
// Pre-registration for Coming Soon LP
// ============================================

model PreRegistration {
  id          String   @id @default(cuid())
  email       String   @unique
  userType    String   // "vendor" (出店者) or "owner" (スペースオーナー)
  createdAt   DateTime @default(now())
}
